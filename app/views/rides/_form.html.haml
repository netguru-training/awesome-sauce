.row
  .col-lg-6.col-md-offset-3
    = simple_form_for ride do |f|
      = f.input :start_city, placeholder: 'Ride form'
      .start
        = f.input :start_city_lat, :as => :hidden, input_html: { data: { geo: 'lat'} }
        = f.input :start_city_lng, :as => :hidden, input_html: { data: { geo: 'lng'} }
      = f.input :destination_city, placeholder: 'Ride to'
      .destination
        = f.input :destination_city_lat, :as => :hidden, input_html: { data: { geo: 'lat'} }
        = f.input :destination_city_lng, :as => :hidden, input_html: { data: { geo: 'lng'} }
      = f.input :seats, placeholder: 'Ride places'
      = f.input :start_date, as: :date, order: [ :day, :month, :year]
      = f.input :price
      = f.button :submit
